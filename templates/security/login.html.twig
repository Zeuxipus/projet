{% extends 'base.html.twig' %}

{% block title %}Too-Doo{% endblock %}

{% block body %}
<style>
  body {
    background-color: #EEEEEE;
  }
  .cadre-todo {
    position: relative;
    margin: 0 auto;
    padding: 20px;
    max-width: 1200px;
  }
  .todo-container {
    position: relative;
    width: 100%;
    max-width: 430px;
    margin: 0 auto;
    border-radius: 10px;
    background-color: #EEEEEE;
    overflow: hidden;
    text-align: center;
    padding: 20px;
  }
  .background {
    width: 250px;
    height: 250px;
    margin: -40px;
  }
  
  .note-cadre {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20px;
  }
  .note-text-cadre {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 10px 12px;
    gap: 10px;
    width: 100%;
    max-width: 267px;
    margin: 10px 0;
    background: #D9D9D9;
    border-radius: 27px;
    position: relative;
  }
  .note-text-cadre label {
    color: #E76F51;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    margin-bottom: 5px;
  }
  .note-text {
    width: 100%;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: black;
    border: none;
    background: none;
    outline: none;
    padding: 0;
  }
  .btn-warning, .btn-success {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 26px;
    cursor: pointer;
    padding: 10px;
    width: 114px;
    height: 46px;
    margin: 10px auto;
    border: none;
  }
  .btn-warning {
    background: #E76F51;
    color: #FFFFFF;
    margin-bottom: 25px;
  }
  .btn-success {
    background: #2A9D8F;
    color: #FFFFFF;
  }
  .create-account {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    text-align: center;
  }
  h1 {
    color: #E76F51;
    margin: 10px 0;
  }

  p {
    color: #000000;
  }

  @media (max-width: 768px) {
    .todo-container {
      width: 90%;
      margin: 0 auto;
    }
    .note-text-cadre {
      width: 90%;
    }
    .btn-warning, .btn-success, .create-account {
      width: 80%;
    }
  }

  img {
    width: 200px;
    height: 200px;
  }
</style>

<div class="cadre-todo">
  <div class="todo-container">
    <img src="{{ asset('/image/3-removebg-preview.png') }}" alt="background" class="background">
    <h1>Too-Doo List</h1>
    <p>Pour être sûûûûr de ne rien oublier</p>
  </div>

  <div class="note-cadre">
    <form action="{{ path('app_login') }}" method="post">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      <div class="note-text-cadre">
        <label for="email" class="label-email">Adresse Email</label>
        <input type="email" value="{{ last_username }}" name="email" class="note-text" autocomplete="email" required autofocus>
      </div>

      <div class="note-text-cadre">
        <label for="password" class="label-password">Mot de passe</label>
        <input type="password" name="password" class="note-text" autocomplete="current-password" required>
      </div>
      
      <button type="submit" class="btn-warning">C'est partiii !</button>

      <p>L'inscription c'est juste en dessous !</p>
      <div class="create-account">
        <a href="{{ path('show_register') }}">
          <button type="button" class="btn-success">Go Go Go !</button>
        </a>
      </div>
    </form>
  </div>
</div>

{% endblock %}
